# .env.example - Copy to .env and fill with real values
# NEVER commit .env to Git!

# Application
APP_ENV=development
APP_DEBUG=true

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your-secure-password-here
DB_NAME=pawnshop
DB_SSL_MODE=disable

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_ISSUER=pawnshop

# Storage (S3/Minio)
S3_ENDPOINT=https://s3.amazonaws.com
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_BUCKET=pawnshop
S3_REGION=us-east-1

# External APIs (if any)
# TWILIO_SID=
# TWILIO_TOKEN=
# SMTP_PASSWORD=

# Monitoring (optional)
# SENTRY_DSN=
# DATADOG_API_KEY=
